<div class="container-details">


  <a href="<%= gift.url %>" target="_blank">
    <img src="<%= gift.imgPath %>" alt="gift picture" id="detail-picture"/>
  </a>

  <div class="description">
    <form action="/" method="get">
      <button>Retour</button>
    </form>
    <h2>
      <%= gift.name %> -
        <%= gift.price %> â‚¬</h2>

    <p>
      <%= gift.description %>
    </p>

    <a href="<%= gift.store.url %>" target="_blank">
      <%= gift.store.name %>
    </a>

    <% if(!isBookmarked) { %>
      <form action="/private/bookMark/<%= gift._id %>" method="post">
        <button type="submit">Ajouter aux favoris</button>
      </form>

      <% } else { %>
        <form action="/private/bookMark/<%= gift._id %>/delete" method="post">
        <button type="submit">Supprimer des favoris</button>
      </form>
        <% } %>

          <iframe width="600" height="450" frameborder="0" style="border:0" src="<%= gift.store.query %>" allowfullscreen>
          </iframe>

  </div>

</div>
