<h1>Bienvenue </h1>
<div>
  <form action="/" method="get">
    <label>Categories
      <select name="categorie">
        <option>
        <option value="enfant">Enfant
        <option value="adulte">Adulte
        <option value="cuisine">Cuisine
        <option value="bien-être">Bien-être
        <option value="apprentissage">apprentissage
        <option value="maison">maison
        <option value="voyage">voyage
        <option value="jeux">jeux
          <option value="jeu de plein air">jeu de plein air
      </select>
    </label>
    <label>Budget Minimum
      <select name="budgetMin">
        <option></option>
        <% for (var i = 10; i <=30; i+= 10) { %>
          <option
           value="<%= i %>"
           <%= budgetMinPreviouslySelected == i ? "selected" : "" %>
           >
           <%= i %>€
          </option>
        <% } %>
      </select>
    </label> 
    <label>Budget Maximum
        <select name="budgetMax">
          <option></option>
          <% for (var i = 10; i <= 40; i+=10) { %>
              <option
                value="<%= i %>"
                <%= budgetMaxPreviouslySelected == i ? "selected" : "" %>
              >
                <%= i %>€
              </option>
          <% } %>
       </select>
     </label> 
    <button type="submit">Rechercher</button>
  </form>
</div>



<div class= "gift">
  <% if (allGifts.length > 0) { %>
   <% allGifts.forEach((gift) => { %>

    <div class="gift-display"
    <p>
      <%= gift.name %>
    </p>
    <img src="<%= gift.imgPath %>" alt="gift picture" width="100%" />
    <p>
      <%= gift.price %> €
    </p>
    <form action="/gifts/<%= gift._id %>" method="get">
      <input type="submit" value="Voir cadeau">
    </form>
  </div>
   <% }) %>
  <% } %>
</div>